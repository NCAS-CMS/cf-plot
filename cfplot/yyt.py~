 
import cf, cfplot as cfp

f=cf.read('/home/xr840994/VplevsJJA.nc')
h=cf.collapse(f[0], 'mean', 'dim0')     
u=cf.collapse(h,'mean','dim3')


g=cf.read('/home/xr840994/OmegaplevsJJA.nc')
i=cf.collapse(g[0], 'mean', 'dim0')
v=cf.collapse(i,'mean','dim3')

cfp.vect(u=u, v=v, key_length=50, scale=2, stride=1)


import numpy as np
newu=np.squeeze(u.array)
newv=np.squeeze(v.array)
lats=u.item('dim2').array     
p=u.item('dim1').array     


cfp.gopen()
cfp.plotvars.plot_type = 2
cfp.gset(-90, 90, 1000,0)
cfp.vect(x=lats, y=p, u=newu, v=newv)
cfp.gclose()


